package exemplo;

import java.util.Scanner;

public class Principal {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        double n1 = lerNota(in, "Digite a primeira nota: ");
        double n2 = lerNota(in, "Digite a segunda nota: ");

        double media = calcularMedia(n1, n2);
        exibirResultado(media);

        in.close();
    }

    // Validando 
    private static double lerNota(Scanner in, String mensagem) {
        double nota;
        while (true) {
            System.out.print(mensagem);
            nota = in.nextDouble();
            if (nota >= 0 && nota <= 10) {
                return nota;
            }
            System.out.println("Nota invÃ¡lida! Digite um valor entre 0 e 10.");
        }
    }

    // Calculando mÃ©dia
    private static double calcularMedia(double n1, double n2) {
        return (n1 + n2) / 2.0;
    }

    // Exibindo resultado
    private static void exibirResultado(double media) {
        System.out.printf("MÃ©dia: %.2f%n", media);
        if (media >= 7) {
            System.out.println("âœ… Aprovado");
        } else {
            System.out.println("ðŸ“˜ Prova Final");
        }
    }
}
